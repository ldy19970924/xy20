<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:application-context.xml</param-value>
    </context-param>

    <servlet>
        <servlet-name>administratorServlet</servlet-name>
        <servlet-class>cn.xy.servlet.ProxyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>administratorServlet</servlet-name>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>
    <!-- 管理员 start   -->
    <servlet>
        <servlet-name>administratorLoginServlet</servlet-name>
        <servlet-class>cn.xy.servlet.ProxyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>administratorLoginServlet</servlet-name>
        <url-pattern>/administratorLogin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>administratorRegisterServlet</servlet-name>
        <servlet-class>cn.xy.servlet.ProxyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>administratorRegisterServlet</servlet-name>
        <url-pattern>/administratorRegister</url-pattern>
    </servlet-mapping>

    <!--     管理员 end-->

    <!--用户 start-->
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>cn.xy.servlet.ProxyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>cn.xy.servlet.ProxyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registerByPhoneServlet</servlet-name>
        <servlet-class>cn.xy.servlet.ProxyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerByPhoneServlet</servlet-name>
        <url-pattern>/registerByPhone</url-pattern>
    </servlet-mapping>
    <!--用户 end-->

    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>cn.xy.servlet.ProxyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/userInfo/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>store</servlet-name>
        <servlet-class>cn.xy.servlet.ProxyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>store</servlet-name>
        <url-pattern>/store/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>complaint</servlet-name>
        <servlet-class>cn.xy.servlet.ProxyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>complaint</servlet-name>
        <url-pattern>/complaint/*</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>productServlet</servlet-name>
        <servlet-class>cn.xy.servlet.ProxyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productServlet</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>myCartServlet</servlet-name>
        <servlet-class>cn.xy.servlet.ProxyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myCartServlet</servlet-name>
        <url-pattern>/myCartServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>faramProductServlet</servlet-name>
        <servlet-class>cn.xy.servlet.ProxyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>faramProductServlet</servlet-name>
        <url-pattern>/faramproduct/*</url-pattern>
    </servlet-mapping>
</web-app>